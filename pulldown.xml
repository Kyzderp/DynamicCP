<GuiXml>
    <Controls>
<!-- ======================================================================================================================= -->
        <TopLevelControl name="DynamicCPPulldown" mouseEnabled="false" movable="false" hidden="false">
            <Dimensions x="740" y="80"/>
            <Anchor point="TOP" relativeTo="ZO_ChampionPerksActionBar" relativePoint="BOTTOM" offsetY="0"/>
            <OnInitialized>
                self:SetWidth(ZO_ChampionPerksActionBar:GetWidth()*0.9)
            </OnInitialized>
            <Controls>
                <Backdrop name="$(parent)Backdrop" centerColor="BB000000" edgeColor="c4c19e"><Edge edgeSize="2"/><AnchorFill/></Backdrop>
                <Button name="$(parent)Close" alpha="1" topmost="true">
                    <Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-2" offsetY="2" />
                    <Dimensions x="32" y="32" />
                    <OnClicked>
                    </OnClicked>
                </Button>
                <Label name="$(parent)Label" font="ZoFontGame" color="c4c19e" verticalAlignment="CENTER" horizontalAlignment="CENTER" tier="HIGH" hidden="false" text="Warning: You have left the Champion Points screen with unsaved points and slottables.">
                    <Dimensions x="680" y="60"/>
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Label>
            </Controls>
        </TopLevelControl>
<!-- ======================================================================================================================= -->
    </Controls>
</GuiXml>
